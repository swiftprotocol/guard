{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "module": "ES2015",
    "target": "ES2015",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "tests/**/*", "**/*.spec.ts"]
}
